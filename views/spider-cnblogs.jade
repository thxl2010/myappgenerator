extends layout

block css
  link(rel='stylesheet', href='/style/spider-cnode.css')

block content
  h1= title
  p Welcome to #{signature}！ —— #{title}

  //button#prev 上一页
  //span 第
  //  em#page 1
  //  | 页
  //button#next 下一页

  table(style="max-width: 1000px;")
    //thead
      tr
        th 编号
        th 用户
        th 文章
        th 链接
        th 时间
    tbody
      each article, i in blogsArr
        tr(style="background-color: #ddd;max-width: 1000px;")
          td #{i + 1}
          td #{article.userName}
          td(style="font-weight: bold") #{article.title}
          td
            a(href="#{article.href}", target="_blank") #{article.href}
          td #{article.time}
        tr(style="max-width: 1000px;")
          td(colspan="4") !{article.cnblog}

block script
  script(src="/bower_components/jquery/dist/jquery.min.js")
  //-script(src="/thirdParty/jquery/jquery.pagination.min.js")
  script(src="/js/spider-cnode.js")



